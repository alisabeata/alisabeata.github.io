@import 'helpers/mixins'
@import 'helpers/variables'
@import 'base/normalize'

body
  font-family 'GraphikLCG'
  color white
  font-size 14px
  line-height 1.7
  background #6d6767
  min-width 800px
  min-height 1200px
  
.page
  max-width 765px
  padding 100px 30px 180px
  margin auto
  
.container
  position relative
  
.title
  position relative
  font-family 'William'
  font-size 25px
  margin-bottom 20px
  padding-top 18px
  
  &::after
    content ""
    position absolute
    top 0
    left 0
    width 50px
    height 2px
    background #928c8c
  
.images
  position absolute
  left 0
  top 395px
  width 204px
  height 265px
  overflow hidden
  
  &__item
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    
    &.closed
      
      img
        display block
        z-index 5
        animation imgClose .4s .2s forwards
      
    &.active
      
      img
        display block
        height 0
        animation imgShow .5s .6s forwards
    
    img
      position absolute
      top 0
      left 0
      display none
      width 100%
      height 100%
  
.list
  margin-left 250px
  margin-top -15px
  
  &__item
    color #b6b0b0
    padding 27px 5px
    border-bottom 2px solid #928c8c
    user-select none
    cursor pointer
    transition color .4s, border .4s
    
    &:first-child
      
      .list__title
        
        span
          top 0 !important
          animation none !important
    
    &.closed
      animation itemClose .4s .2s forwards
      
      .list__descr
          display block
          opacity 0
      
    &.active
      color #fdfdfd
      border-bottom 2px solid #b5b2b2
      max-height 91px
      animation itemShow 1.6s .6s forwards
      
      .list__descr
        display block
        animation descrShow .4s .8s forwards, descrShowOpacity .01s .8s forwards
        
      .list__title
        
        span
          position relative
          animation animateTitle .4s .4s forwards
        
        &::after
          transform rotate(180deg)
          transition none
          opacity 1
        
  &__descr
    position relative
    top 30px
    display none
    padding-top 32px
    padding-bottom 10px
    opacity 0
    
    p
      margin 0
    
  &__title
    position relative
    height 35px
    font-size 21px
    letter-spacing 0.3px
    padding-right 30px
    
    &::after
      content ""
      position absolute
      top 0
      right -3px
      bottom 0
      width 20px
      height 20px
      margin auto
      background url($whiteArrow)
      background-size contain
      background-repeat no-repeat
      background-position center
      opacity .5
      transform rotate(360deg)
      transition transform .4s
      
      
  &_up
    
    .list__title
        
        span
          top 0 !important
          animation none !important

      
@keyframes descrShow
    0%
        top 30px
    100%
        top 0
      
@keyframes descrShowOpacity
    0%
        opacity 0
    100%
        opacity 1
      
@keyframes itemShow
    0%
        max-height 91px
    100%
        max-height 700px
      
@keyframes itemClose
    0%
        max-height 700px
    100%
        max-height 91px
      
@keyframes imgShow
    0%
        height 0
    100%
        height 100%
          
@keyframes imgClose
    0%
        height 100%
    100%
        height 0
      
@keyframes animateTitle
    0%
        top 0
    50%
        top -30px
    100%
        top 0